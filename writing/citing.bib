  keywords  = {Business ; Business & Economics ; Economics ; International Relations ; Social Sciences ; Tariffs ; Trade disputes ; War},
  publisher = {ROUTLEDGE JOURNALS, TAYLOR & FRANCIS LTD},
  title     = {Economic Impacts of the Possible China-US Trade War},
