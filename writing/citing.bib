  copyright = {2020 Elsevier Inc.},
  author    = {Li, Minghao and Balistreri, Edward J and Zhang, Wendong},
  issn      = {1049-0078},
  journal   = {Journal of Asian economics},
  keywords  = {Computational general equilibrium (CGE) ; Tariff ; Trade war ; Welfare analysis},
